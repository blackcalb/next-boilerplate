generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type RecordsAmount {
  currency String
  value    Int
}

model Accounts {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  balance  Float
  currency String
  name     String
}

model Budgets {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  budget      Int
  categoryIds String[]
  from        DateTime @db.Date
  name        String
  to          DateTime @db.Date
  used        Int
}

model Categories {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  type String
}

model Records {
  id         String        @id @default(auto()) @map("_id") @db.ObjectId
  accountId  String        @db.ObjectId
  amount     RecordsAmount
  categoryId String        @db.ObjectId
  date       DateTime      @db.Date
  subject    String
  type       String
}
