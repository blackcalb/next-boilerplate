generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type ComponentsLatestVersion {
  identifier String
}

type ComponentsVersions {
  identifier String
}

type RecordsAmount {
  currency String
  value    Int
}

model Budgets {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  budget      Int
  categoryIds String[]
  from        DateTime @db.Date
  name        String
  to          DateTime @db.Date
  used        Int
}

model Categories {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  type String
}

model Records {
  id         String        @id @default(auto()) @map("_id") @db.ObjectId
  amount     RecordsAmount
  categoryId String        @db.ObjectId
  date       DateTime      @db.Date
  subject    String
  type       String
}

model components {
  id            String                  @id @default(auto()) @map("_id") @db.ObjectId
  description   String
  latestVersion ComponentsLatestVersion
  name          String
  versions      ComponentsVersions[]
}

model test {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  hello String
}
